  newActive   Boolean?   @map("new_active")
  reason      String?
  ipAddress   String?    @map("ip_address")
  createdAt   DateTime   @default(now()) @map("created_at")

  @@index([userId])
  @@index([roleId])
  @@index([createdAt])
  @@map("user_role_logs")
}

